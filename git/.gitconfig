[user]
  username = Seiji Toyama
	email = toyama.seiji@gmail.com
	name = Seiji Toyama

[color]
  ui = auto

[mergetool]
  keepBackup = true

[core]
  editor = vim
	excludesfile = /Users/seiji/.gitignore_global
	quotepath = false

[branch]
  autosetuprebase = always

[merge]
  ff = false

[push]
  default = upstream

[pull]
  rebase = true

[branch "master"]
  rebase = true
  mergeoptions = --no-ff

[alias]
  al  = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t= \\2/' | sort
  br  = branch
  ci  = commit
  cia = commit --amend
  co  = checkout
  di  = diff
  dc  = diff --cached
  fe  = fetch --prune
  fs  = !cd $(git rev-parse --show-toplevel) && git submodule update && cd -
  ls  = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  ll  = log --stat --abbrev-commit
  mnf = merge --no-ff
  pl  = pull origin
  ps  = push origin
  rs  = reset --soft HEAD
  rh  = reset --hard HEAD
  st  = !git status -s -b && git stash list

  # Log



  sb = show-branch --all --color
  sgraph = !"git log --oneline --graph"

  graph = !"git log1"

  # Other
  ignore = !"f() { local s=$1; shift; \
    while [ $# -gt 0 ]; do s="$s,$1"; shift; done;\
    curl "http://gitignore.io/api/$s"; }; f"

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/2.0.5.2/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[ghq]
  root = /Users/seiji/src

[filter "csharp-format"]
  clean = /usr/local/bin/astyle --style=linux --mode=cs --suffix=none
#  smudge = cat
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
