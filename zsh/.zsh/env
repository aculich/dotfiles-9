setopt no_global_rcs

export MANPATH="/usr/local/share/man:/usr/X11/man:/usr/share/man"

export LANG="en_US.UTF-8"
export LC_COLLATE="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"
export LC_MUSSAGUS="en_US.UTF-8"
export LC_MONETARY="en_US.UTF-8"
export LC_NUMERIC="en_US.UTF-8"
export LC_TIME="en_US.UTF-8"
export LC_ALL=

export EDITOR=vim
export CLICOLOR=1
export TERM=xterm-256color
export LSCOLORS=Gxfxcxdxhxegedahagacgx
export PATH=/usr/local/bin:/usr/local/sbin:$HOME/local/bin:$PATH

case ${OSTYPE} in
  darwin*)
    #export SSL_CERT_FILE=/usr/local/opt/curl-ca-bundle/share/ca-bundle.crt
    export DEVELOPER_DIR=$(xcode-select -p)
    # Xcode6 symbolicate
    export PATH="$DEVELOPER_DIR/../SharedFrameworks/DTDeviceKitBase.framework/Versions/A/Resources:$PATH"
    ;;
  linux*)
    export CURL_CA_BUNDLE=/etc/ssl/certs/ca-certificates.crt
    export NO_AT_BRIDGE=1 # naulitulus
    if [[ -s $HOME/.linuxbrew ]]; then
      export PATH="$HOME/.linuxbrew/bin:$PATH"
      export LD_LIBRARY_PATH="$HOME/.linuxbrew/lib:$LD_LIBRARY_PATH"
    fi
    ;;
esac

# Git
if [ -x `brew --prefix git` ]; then
  export GIT_ROOT=$(brew --prefix git)
  export PATH="$GIT_ROOT/share/git-core/contrib/diff-highlight:$PATH"
fi

# Ruby
export RBENV_ROOT="$HOME/.rbenv"
export PATH="$RBENV_ROOT/bin:$PATH"
#export PATH="$RBENV_ROOT/bin:$RBENV_ROOT/shims:$PATH"
export BUNDLER_EDITOR="vim +VimFiler"

# Python
if [ -x `brew --prefix pyenv` ]; then
  export PYENV_ROOT=$(brew --prefix pyenv)
  export PATH="$PYENV_ROOT/bin:$PATH"
  eval "$(pyenv init -)"
fi

# GCP
export GCP_HOME="$HOME/google-cloud-sdk"
export PATH="${GCP_HOME}/bin:${PATH}"

# EC2
export EC2_HOME="$HOME/local/ec2-api-tools"
export EC2_PRIVATE_KEY="$HOME/Dropbox/Document/AWS/pk-F5TNG7ECOHRJFVER6PFRNJN5G23N6CC2.pem"
export EC2_CERT="$HOME/Dropbox/Document/AWS/cert-F5TNG7ECOHRJFVER6PFRNJN5G23N6CC2.pem"
export PATH="${PATH}:${EC2_HOME}/bin"

# Android sdk
if [[ -s /Applications/android-sdk-macosx ]]; then
  export ANDROID_HOME=/Applications/android-sdk-macosx
  PATH=$PATH:$ANDROID_HOME/tools
  export PATH=$PATH:$ANDROID_HOME/platform-tools
fi

# Android ndk
if [[ -s /Applications/android-ndk-r9c ]]; then
  export ANDROID_NDK_HOME=/Applications/android-ndk-r9c
  export PATH=$PATH:$ANDROID_NDK_HOME
fi

# Node
export NODE_PATH=/usr/local/lib/node_modules
export PATH=$PATH:$HOME/.nodebrew/current/bin

# Golang
#export PATH=$HOME/go/bin:$PATH
if [ -x `brew --prefix go` ]; then
  export GOROOT=$(brew --prefix go)/libexec
  export GOPATH=$HOME
  export PATH=$GOPATH/bin:$GOROOT/bin:$PATH
fi
#if [[ -s $HOME/go ]]; then
#  export GOROOT=$HOME/go
#  export GOPATH=$HOME
#  export PATH=$GOPATH/bin:$GOROOT/bin:$PATH
#fi

# PHP composer
if [[ -s $HOME/.composer ]]; then
  export PATH=$HOME/.composer/vendor/bin:$PATH
fi

# docker/machine
# export DOCKER_CERT_PATH=~/.boot2docker/certs/boot2docker-vm
# export DOCKER_TLS_VERIFY=1

# export VIRTUALBOX_BOOT2DOCKER_URL=https://github.com/boot2docker/boot2docker/releases/download/v1.4.1/boot2docker.iso

if type machine >/dev/null; then
  machine url >&/dev/null
  if [ $? -eq 0 ]; then
    $(machine env)
    #export DOCKER_HOST=`machine url` DOCKER_AUTH=identity
  fi
fi

