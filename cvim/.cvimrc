" sync from https://raw.githubusercontent.com/seiji/dotfiles/master/cvim/.cvimrc
" keymap: https://raw.githubusercontent.com/1995eaton/chromium-vim/585d89f8eb2f21cca910e0fc5837f3a46885f4fe/content_scripts/mappings.js
"
let searchlimit=30
let scrolltep=30
let timeoutlen=1000
let fullpagescrollpercent = 100
let typelinkhintsdelay=500
let scrollduration=20
let zoomfactor=0.1
set nohud
set regexp
set ignorecase
set nolinkanimations
set nonumerichints
set dimhintcharacters
set nodefaultnewtabpage
set cncpcompletion
set smartcase
set incsearch
set notypelinkhints
set autohidecursor
set noautofocus
set insertmappings
set nosmoothscroll
set autoupdategist
let blacklists=["chrome://bookmarks*","https://mail.google.com/*","https://inbox.google.com/*","http://feedly.com/*"]
let mapleader=","
let highlight="#ffff00"
let defaultengine="google"
let locale=""
let activehighlight="#ff9632"
let homedirectory=""

let hintcharacters = "hjklasdfgyuiopqwertnmzxcvb"
let barposition = "bottom"

" qmarks
let qmark c = ["https://www.google.com/calendar"]
let qmark f = ["http://feedly.com/index.html#latest"]
let qmark g = ["https://github.com/"]
let qmark i = ["https://inbox.google.com"]
let qmark l = ["https://www.google.com/language_tools"]
let qmark m = ["https://mail.google.com"]
let qmark p = ["https://getpocket.com/a/queue/"]
let qmark t = ["https://mail.google.com/tasks/canvas"]

" keymaps
map <C-h> deleteWord
map <C-j> scrollDown
map <C-k> scrollUp
map <C-u> scrollPageUp
map <C-d> scrollPageDown
map <C-b> scrollFullPageUp
map <C-f> scrollFullPageDown
map <C-i> goForward
map <C-o> goBack

map <C-[> previousTab
map <C-]> nextTab

map d closeTab
map u lastClosedTab
map F createMultiHint
map R reloadTabUncached

site '*://*.translate.google.com/*' {
  set autofocus
}

iunmapAll
